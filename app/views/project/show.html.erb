<!--=== Content part ===-->
<div id="body">
  <div class="breadcrumbs margin-bottom-40">
      <div class="container">
            <h1 class="color-green pull-left"><%= @projects.title %></h1>
            <ul class="pull-right breadcrumb">
                <li><a href="http://www.rehashstudio.com">Home</a> <span class="divider">/</span></li>
                <li class="active"><%= @projects.title %></li>
            </ul>
        </div><!--/container-->
    </div><!--/breadcrumbs-->

  <div class="container portfolio-item">  
    <div class="row-fluid margin-bottom-20"> 
      <!-- Carousel -->
            <div class="da-img span8">
                <div class="videoUiWrapper thumbnail">
                    <%= image_tag @projects.main_image %>
                </div>
            </div>
            <!-- //End Tabs and Carousel -->
            
            <div class="span4">
              <h3> <%= @projects.headline %> </h3>
              <p>  <%= @projects.body %> <p>
            </div> 

        </div><!--/row-fluid-->

          <div class="container"> 

        <!-- Recent Works --><br />
        <div class="headline"><h3>Recent Work</h3></div>
        <ul class="thumbnails">
            <% @project.each do |project| %>
                <li class="span3">
                    <div class="thumbnail-style thumbnail-kenburn">
                        <div class="thumbnail-img">
                            <div class="overflow-hidden">
                                <%= image_tag project.thumbnail_lrg %>
                            </div>
                            <%= link_to "more", project, {:class => "btn-more hover-effect"} %>
                        </div>
                        <h3><%= link_to project.title, project, { :class=>"hover-effect" } %></h3><!-- class="hover-effect" -->
                    </div>
                </li>
            <% end %>
           
        </ul><!--/thumbnails-->
        <!-- //End Recent Works -->

  </div><!--/container-->   
    </div>

