<!--=== Content part ===-->
<div id="body">
  <div class="breadcrumbs margin-bottom-40">
      <div class="container">
            <h1 class="color-green pull-left" ><%= @project.title %></h1>
            <ul class="pull-right breadcrumb">
                <li><a href="http://www.rehashstudio.com">Home</a> <span class="divider">/</span></li>
                <li class="active"><%= @project.title %></li>
            </ul>
        </div><!--/container-->
    </div><!--/breadcrumbs-->

  <div class="container portfolio-item">  
    <div class="row-fluid margin-bottom-20"> 
      <!-- Carousel -->
            <div class="da-img span8">
                <div class="videoUiWrapper thumbnail">
                    <%= image_tag @project.main_image %>
                </div>
            </div>
            <!-- //End Tabs and Carousel -->
            
            <div class="span4">
              <h3> <%= @project.headline %> </h3>
              <p>  <%= @project.body %> <p>
            </div> 

        </div><!--/row-fluid-->

          <div class="container"> 

        <!-- Recent Works --><br />
        <div class="headline"><h3>Recent Work</h3></div>
        <ul class="thumbnails">
            <% @projects.each do |project| %>
                <%if project.flag != true %>
                    <li class="span3">
                         <div class="thumbnail-style thumbnail-kenburn">
                              <div class="thumbnail-img">
                                  <div class="overflow-hidden">
                                        <%= image_tag project.thumbnail_lrg %>  
                                  </div>
                                        <%= link_to "more", project, {:class => "btn-more hover-effect"} %>
                              </div>
                                      <h3><%= link_to project.title, project, { :class=>"hover-effect" } %></h3><!-- class="hover-effect" -->
                         </div>
                     </li>
                 <% end %>
            <% end %>
           
        </ul><!--/thumbnails-->
        <!-- //End Recent Works -->

  </div><!--/container-->   
    </div>

